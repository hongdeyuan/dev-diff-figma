{
  "manifest_version": 3,
  "name": "dev-diff-figma",
  "version": "1.0.0",
  "description": "dev-diff-figma",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Click to open the dev-diff-figma",
    "default_popup": "dist/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dist/index.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "storage"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["dist/index.js", "dist/assets/index.css"]
    }
  ]
}
